@model Product

@{
    ViewData["Title"] = "Product Detail";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <br />
            <br />

            <h1>@ViewData["Title"]</h1>
            <p>This is a product detail page.</p>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Description</td>
                        <td>Category</td>
                        <td>ImageName</td>
                    </tr>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Name</td>
                        <td>@Model.Description</td>
                        <td>@Model.Category</td>
                        <td>@Model.ImageName</td>
                    </tr>
                </thead>
            </table>

            <hr class="featurette-divider">
        </div>
    </div>
</div>

